{
  "format_version": "1.16.0",
  "minecraft:entity": {
    "description": {
      "identifier": "dbz:saibamen",
      "is_spawnable": true,
      "is_summonable": true,
      "is_experimental": false
    },
    // COMPONENT GROUPS
    "component_groups": {
      "minecraft:exploding": {
        "minecraft:explode": {
          "fuseLength": 1.5,
          "fuseLit": true,
          "power": 3,
          "causesFire": true
        },
        "minecraft:scale": {
          "value": 2
        }
      }
    },
    // COMPONENTS
    "components": {
      "minecraft:identifier": {
        "id": "dbz:saibamen"
      }, 
      "minecraft:type_family": {
        "family": ["saibamen", "monster", "mob"]
      },
      "minecraft:loot": {
        "table": "loot_table/entities/custom/saibamen_loot.json"
      },
      "minecraft:experience_reward": {
        "on_death": "query.last_hit_by_player ? 5 : 0"
      },
      "minecraft:health": {
        "value": 10,
        "max": 1
      },
      
      // MOVEMENT
      "minecraft:movement": {
        "value": 0.2
      },
      "minecraft:navigation.walk": {
        "can_path_over_water": true
      },
      "minecraft:movement.basic": {
        "is_amphibious": true,
        "can_pass_doors": true,
        "can_walk": true,
        "can_break_doors": true
      },
      "minecraft:annotation.break_door": {
      },
      "minecraft:jump.static": {
      },
      "minecraft:can_climb": {
      },
      "minecraft:pushable": {
        "is_pushable": true,
        "is_pushable_by_piston": true
      },
      "minecraft:behavior.random_stroll": {
        "priority": 7,
        "speed_multiplier": 1
      },
      
      "minecraft:breathable": {
        "total_supply": 15,
        "suffocate_time": 0,
        "breathes_air": true,
        "breathes_water": true
      },
      "minecraft:behavior.look_at_player": {
        "priority": 8,
        "look_distance": 8
      },
      "minecraft:behavior.random_look_around": {
        "priority": 9
      },
      
      // ATTACKING
      "minecraft:attack": {
        "damage": 3
      },
      "minecraft:behavior.melee_attack": {
        "priority": 3
      },
      "minecraft:behavior.hurt_by_target": {
        "priority": 1
      },
      "minecraft:behavior.nearest_attackable_target": {
        "priority": 2,
        "must_see": true,
        "reselect_targets": true,
        "within_radius": 25.0,
        "must_see_forget_duration": 17.0,
        "entity_types": [
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "player" }
              ]
            },
            "max_dist": 35
          },
          {
            "filters": {
              "any_of": [
                { "test": "is_family", "subject": "other", "value": "villager" },
                { "test": "is_family", "subject": "other", "value": "wandering_trader" }
              ]
            },
            "max_dist": 35,
            "must_see": false
          }
        ]
      },
      
      // MISC
      "minecraft:physics": {
      },
      "minecraft:despawn": {
        "despawn_from_distance": {}
      },
      "minecraft:conditional_bandwidth_optimization": {
      }
    },
    
    // EVENTS
    "events": {
      "minecraft:start_exploding": {
        "add": {
          "component_groups": [
            "minecraft:exploding"
          ]
        }
      },
      "minecraft:stop_exploding": {
        "remove": {
          "component_groups": [
            "minecraft:exploding"
          ]
        }
      }
    }
  
  }
}